ssh_pwauth: false

groups:
  - ubuntu: [root, sys]

users:
  - name: ubuntu
    inactive: true

users:
  - default
  - name: pi-Gee
    gecos: pi-Gee
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: sudo
    ssh_import_id: None
    lock_passwd: true
    shell: /bin/bash
    ssh_authorized_keys:
      - <ssh-pub-key>

packages:
# so we can pre-fill hostname during configuration
- avahi-daemon

runcmd:
  # Pickup the hostname changes
  - 'systemctl restart avahi-daemon'
